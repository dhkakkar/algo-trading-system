# ============================================
# Algo Trading System - Environment Variables
# ============================================
# Copy this file to .env and fill in real values
# NEVER commit .env to git

# ── App ──
APP_NAME=AlgoTradingSystem
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-random-64-char-string

# ── Database ──
POSTGRES_USER=algotrader
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=algo_trading
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ── Redis ──
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ── JWT ──
JWT_SECRET_KEY=change-this-to-another-random-64-char-string
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# ── Kite Connect (Zerodha) ──
KITE_API_KEY=your_kite_api_key
KITE_API_SECRET=your_kite_api_secret

# ── Encryption (for storing broker secrets) ──
ENCRYPTION_KEY=change-this-generate-with-python-cryptography-fernet

# ── Frontend ──
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=http://localhost:8000

# ── CORS ──
CORS_ORIGINS=http://localhost:3000,http://localhost:80
